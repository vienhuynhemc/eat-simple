<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout
    android:layout_marginTop="10dp"
    android:id="@+id/swipeLayout"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    app:mode="same_level"
    app:dragEdge="right"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/swipDelete"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_marginRight="8dp"
            android:layout_width="60dp"
            android:layout_marginTop="5dp"
            android:layout_height="80dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#FFADA7">
            <ImageView
                android:src="@drawable/activity_wishlist_icon_delete_item"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:gravity="center"
           android:layout_width="match_parent"
           android:layout_height="90dp"
           android:orientation="horizontal">
           <CheckBox
               android:id="@+id/checkboxAdd"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp"
               android:layout_width="30dp"
               android:layout_height="30dp"/>
           <FrameLayout
               android:clipChildren="false"
               android:layout_marginRight="20dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <androidx.cardview.widget.CardView
                   app:cardElevation="5dp"
                   android:id="@+id/activity_wishlist_btnDetail"
                   android:layout_margin="5dp"
                   app:cardCornerRadius="10dp"
                   app:cardBackgroundColor="@color/white"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="horizontal">
                       <ImageView
                           android:id="@+id/imgP"
                           android:scaleType="fitXY"
                           android:layout_gravity="center"
                           android:layout_width="100dp"
                           android:layout_height="100dp"
                        />
                       <LinearLayout
                           android:layout_marginLeft="10dp"
                           android:layout_gravity="center"
                           android:layout_width="wrap_content"
                           android:layout_height="70dp"
                           android:orientation="vertical">
                           <TextView
                               android:layout_weight="1"
                               android:id="@+id/nameP"
                               android:textStyle="bold"
                               android:textColor="@color/color_main"
                               android:gravity="center_vertical"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="Name"
                               android:textSize="14sp"/>
                           <LinearLayout
                               android:layout_weight="1"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal">
                               <TextView
                                   android:gravity="center"
                                   android:layout_gravity="center"
                                   android:layout_width="wrap_content"
                                   android:text="size: "
                                   android:layout_height="wrap_content"/>
                               <TextView
                                   android:id="@+id/activity_wishlist_size"
                                   android:textStyle="bold"
                                   android:gravity="center"
                                   android:layout_gravity="center"
                                   android:layout_width="wrap_content"
                                   android:text="nhá»"
                                   android:layout_height="match_parent"/>


                           </LinearLayout>
                           <TextView
                               android:layout_weight="1"
                               android:gravity="left|center_vertical"
                               android:textStyle="bold"
                               android:id="@+id/priceP"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="Name"
                               android:textColor="#f23"
                               android:textSize="14sp"/>
                       </LinearLayout>
                   </LinearLayout>
               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   app:cardElevation="10dp"

                   android:id="@+id/btnAddCart"
                   android:layout_marginBottom="15dp"
                   android:layout_marginRight="15dp"
                   android:layout_gravity="right|bottom"
                   android:layout_width="50dp"
                   android:layout_height="25dp"
                   app:cardCornerRadius="10dp"
                   app:cardBackgroundColor="#FFBF00">
                   <ImageView
                       android:layout_gravity="center"
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:src="@drawable/activity_wishlist_cart_item"/>
               </androidx.cardview.widget.CardView>
           </FrameLayout>

       </LinearLayout>
<!--       <com.facebook.shimmer.ShimmerFrameLayout-->
<!--           android:id="@+id/shimmer"-->
<!--           android:layout_width="match_parent"-->
<!--           android:layout_height="wrap_content">-->
<!--           <include-->
<!--               layout="@layout/item_wishlist_shimmer"/>-->
<!--       </com.facebook.shimmer.ShimmerFrameLayout>-->
   </FrameLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>



