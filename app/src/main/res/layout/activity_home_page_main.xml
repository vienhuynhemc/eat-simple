<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- HEDAER -->
    <androidx.cardview.widget.CardView
        android:id="@+id/activity_home_page_button_menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:scaleType="fitXY"
        app:cardCornerRadius="11dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,UnusedAttribute">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/activity_home_page_button_menu" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/activity_home_page_layout_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/activity_home_page_avatar"
        app:layout_constraintEnd_toStartOf="@id/activity_home_page_avatar"
        app:layout_constraintStart_toEndOf="@id/activity_home_page_button_menu"
        app:layout_constraintTop_toTopOf="@id/activity_home_page_avatar">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/activity_home_page_icon_location"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/activity_home_page_name_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Thủ Đức, Hồ Chí US"
            android:textColor="@color/color_text_main"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/activity_home_page_icon_arrow_down"
            android:translationY="0.5dp"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/activity_home_page_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="30dp"
        android:scaleType="fitXY"
        app:cardCornerRadius="11dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,UnusedAttribute">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/activity_home_page_avatar" />
    </androidx.cardview.widget.CardView>
    <!-- Kết thúc HEDAER -->

    <!-- Nội dung -->
    <!-- Kết thúc nội dung -->

    <!-- Footer -->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toTopOf="@id/activity_home_page_footer"
        app:layout_constraintTop_toBottomOf="@id/activity_home_page_avatar"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Banner -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:cardBackgroundColor="#FFF2D5"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:translationX="5dp"
                        android:translationY="-50dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/activity_home_page_man_riding_a_red_scooter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="30dp"
                        android:text="@string/activity_home_page_banner_1"
                        android:textColor="@color/color_text_main"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="56dp"
                        android:text="@string/activity_home_page_banner_2"
                        android:textColor="@color/color_text_main"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="104dp"
                        android:layout_marginTop="57dp"
                        android:text="@string/activity_home_page_banner_3"
                        android:textColor="@color/color_main"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/activity_main_oder_now"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginBottom="30dp"
                        app:cardBackgroundColor="@color/color_main"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/activity_home_page_orderNow"
                            android:textColor="@color/white"
                            android:textSize="13sp" />
                    </androidx.cardview.widget.CardView>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
            <!-- Kết thúc banner -->

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_home_page_footer"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/activity_home_page_home"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="38dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/activity_home_page_icon_home"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription" />

        <androidx.cardview.widget.CardView
            android:id="@+id/activity_home_page_home_select"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="6dp"
            app:cardBackgroundColor="@color/color_main"
            app:cardCornerRadius="4dp"
            app:layout_constraintEnd_toEndOf="@id/activity_home_page_home"
            app:layout_constraintStart_toStartOf="@id/activity_home_page_home"
            app:layout_constraintTop_toBottomOf="@id/activity_home_page_home"
            tools:ignore="UnusedAttribute" />

        <ImageButton
            android:id="@+id/activity_home_page_heart"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="31dp"
            android:background="@drawable/activity_home_page_icon_heart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/activity_home_page_home"
            tools:ignore="ContentDescription" />

        <androidx.cardview.widget.CardView
            android:id="@+id/activity_home_page_heart_select"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="6dp"
            android:visibility="invisible"
            app:cardBackgroundColor="@color/color_main"
            app:cardCornerRadius="4dp"
            app:layout_constraintEnd_toEndOf="@id/activity_home_page_heart"
            app:layout_constraintStart_toStartOf="@id/activity_home_page_heart"
            app:layout_constraintTop_toBottomOf="@id/activity_home_page_heart"
            tools:ignore="UnusedAttribute" />

        <ImageButton
            android:id="@+id/activity_home_page_ring"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="31dp"
            android:background="@drawable/activity_home_page_icon_ring"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/activity_home_page_cart"
            tools:ignore="ContentDescription" />

        <androidx.cardview.widget.CardView
            android:id="@+id/activity_home_page_ring_select"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="6dp"
            android:visibility="invisible"
            app:cardBackgroundColor="@color/color_main"
            app:cardCornerRadius="4dp"
            app:layout_constraintEnd_toEndOf="@id/activity_home_page_ring"
            app:layout_constraintStart_toStartOf="@id/activity_home_page_ring"
            app:layout_constraintTop_toBottomOf="@id/activity_home_page_ring"
            tools:ignore="UnusedAttribute" />

        <ImageButton
            android:id="@+id/activity_home_page_cart"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="31dp"
            android:background="@drawable/activity_home_page_icon_cart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="ContentDescription" />

        <androidx.cardview.widget.CardView
            android:id="@+id/activity_home_page_cart_select"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="6dp"
            android:visibility="invisible"
            app:cardBackgroundColor="@color/color_main"
            app:cardCornerRadius="4dp"
            app:layout_constraintEnd_toEndOf="@id/activity_home_page_cart"
            app:layout_constraintStart_toStartOf="@id/activity_home_page_cart"
            app:layout_constraintTop_toBottomOf="@id/activity_home_page_cart"
            tools:ignore="UnusedAttribute" />

        <androidx.cardview.widget.CardView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginStart="19dp"
            android:layout_marginBottom="17dp"
            app:cardBackgroundColor="@color/color_main"
            app:cardCornerRadius="11dp"
            app:layout_constraintBottom_toBottomOf="@id/activity_home_page_cart"
            app:layout_constraintStart_toStartOf="@id/activity_home_page_cart"
            tools:ignore="UnusedAttribute">

            <TextView
                android:id="@+id/activity_home_page_number_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="13sp"
                tools:ignore="HardcodedText" />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- Kết thúc footer -->

    <!-- Icon search -->
    <androidx.cardview.widget.CardView
        android:id="@+id/activity_home_page_serach"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="28dp"
        app:cardBackgroundColor="@color/color_main"
        app:cardCornerRadius="35dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="UnusedAttribute">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/activity_home_page_search"
            tools:ignore="ContentDescription" />
    </androidx.cardview.widget.CardView>
    <!-- Kết thúc icon search -->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>